<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage">

    <Grid ColumnSpacing="0" RowSpacing="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Editor at the center -->
        <Entry
                x:Name="ItemEditor"
                Placeholder="Enter item details"
                Grid.Column="0"
                Grid.Row="0"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="StartAndExpand" />

        <!-- Buttons stacked to the right -->
        <StackLayout Orientation="Vertical" Grid.Column="1" Grid.Row="0">
            <Button Text="Add"
                    Clicked="OnAddButtonClicked" />
            <Button Text="Remove"
                    Clicked="OnRemoveButtonClicked" />
            <Button Text="Edit"
                    Clicked="OnEditButtonClicked" />
        </StackLayout>

        <!-- Output screen -->
        <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Output collection view -->
            <CollectionView
                x:Name="ItemsCollectionView"
                ItemsSource="{Binding Items}"
                SelectionMode="Single"
                SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding}" FontSize="18" Padding="10"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>
